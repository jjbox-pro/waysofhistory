<?xml version='1.0' encoding='utf-8'?>
<widget id="com.waysofhistory" project_version="1.4.43.6" version="1.4.436" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ways of History</name>
    <description>
        π — Ways of History. Global strategic game.
    </description>
    <author email="support@waysofhistory.com" href="https://waysofhistory.com">
        Glyph Worlds Team
    </author>
    <content src="launcher.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="https://*.waysofhistory.com/*" />
    <hook src="scripts/platforms/before_platform_add.js" type="before_platform_add" />
    <hook src="scripts/platforms/after_platform_add.js" type="after_platform_add" />
    <hook src="scripts/platforms/before_prepare.js" type="before_prepare" />
    <platform name="android">
        <hook src="scripts/platforms/android/before_prepare.js" type="before_prepare" />
        <hook src="scripts/platforms/android/after_build.js" type="after_build" />
        <allow-intent href="market:*" />
        <preference name="AndroidXEnabled" value="true" />
        </platform>
    <platform name="ios">
        <hook src="scripts/platforms/ios/before_prepare.js" type="before_prepare" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="scheme" value="app" />
        <preference name="hostname" value="localhost" />
        </platform>
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>
